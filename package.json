{
  "name": "sql-mcp",
  "version": "1.0.0",
  "description": "MySQL-backed Model Context Protocol (MCP) server for database metadata, sampling and read-only queries.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sql-mcp": "dist/cli.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "config:check": "node dist/tools/config-check.js"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "mysql",
    "database",
    "tools",
    "server"
  ],
  "author": "Polaris",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polarisxb/sql-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/polarisxb/sql-mcp/issues"
  },
  "homepage": "https://github.com/polarisxb/sql-mcp#readme",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mysql2": "^3.14.3",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.25.76"
  },
  "publishConfig": {
    "access": "public"
  }
}
